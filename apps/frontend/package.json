{
  "name": "@cirrodrive/frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "build:dev": "tsc -b && vite build --mode development",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "vite",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "ui-add": "shadcn add",
    "compose:prod:build": "docker-compose -f compose.prod.yaml build",
    "compose:prod:up": "docker-compose -f compose.prod.yaml up -d --renew-anon-volumes",
    "compose:prod:down": "docker-compose -f compose.prod.yaml down -v",
    "compose:dev:build": "docker-compose -f compose.dev.yaml build",
    "compose:dev:up": "docker-compose -f compose.dev.yaml up -d --renew-anon-volumes",
    "compose:dev:down": "docker-compose -f compose.dev.yaml down -v"
  },
  "dependencies": {
    "@cirrodrive/tsconfig": "workspace:^",
    "@cirrodrive/types": "workspace:*",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/themes": "^3.1.3",
    "@tanstack/react-query": "^5.49.2",
    "@tanstack/react-query-devtools": "^5.49.2",
    "@trpc/client": "catalog:",
    "@trpc/react-query": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.0",
    "http-status-codes": "^2.3.0",
    "lucide-react": "^0.439.0",
    "react": "catalog:react18",
    "react-dom": "catalog:react18",
    "react-router-dom": "^6.24.0",
    "superjson": "^2.2.1",
    "zod": "catalog:",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@cirrodrive/backend": "workspace:^",
    "@cirrodrive/eslint-config": "workspace:*",
    "@cirrodrive/tailwind-config": "workspace:^",
    "@testing-library/dom": "^10.2.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/react": "catalog:react18",
    "@types/react-dom": "catalog:react18",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "autoprefixer": "^10.4.19",
    "clsx": "^2.1.1",
    "eslint": "catalog:",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.47",
    "prettier": "catalog:",
    "react-router-typesafe-routes": "^1.2.2",
    "shadcn": "^2.0.4",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "catalog:"
  }
}
