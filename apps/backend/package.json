{
  "name": "@cirrodrive/backend",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=20.18.0",
    "pnpm": "^9.6.0"
  },
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build --ssr src/server.ts",
    "clean": "git clean -xdf .cache .turbo node_modules",
    "predev": "vite-node predev.ts",
    "dev": "vite-node --watch src/server.ts",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "start": "node dist/server.js",
    "prestart": "prisma migrate deploy",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prisma:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev --create-only --name init",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:db:push": "prisma db push",
    "prisma:db:seed": "prisma db seed",
    "ci:runDatabase": "vite-node runDatabase.jenkins.ts",
    "compose:prod:build": "docker-compose -f compose.prod.yaml build",
    "compose:prod:up": "docker-compose -f compose.prod.yaml up -d --renew-anon-volumes",
    "compose:prod:down": "docker-compose -f compose.prod.yaml down -v",
    "compose:dev:build": "docker-compose -f compose.dev.yaml build",
    "compose:dev:up": "docker-compose -f compose.dev.yaml up -d --renew-anon-volumes",
    "compose:dev:down": "docker-compose -f compose.dev.yaml down -v"
  },
  "dependencies": {
    "@cirrodrive/tsconfig": "workspace:^",
    "@node-rs/argon2": "^2.0.0",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@prisma/client": "^5.16.1",
    "@trpc/server": "catalog:",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.12",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.2",
    "jsonfile": "^6.1.0",
    "multer": "^1.4.5-lts.1",
    "pino": "^9.3.2",
    "pino-http": "^10.1.0",
    "pino-pretty": "^11.2.1",
    "reflect-metadata": "^0.2.2",
    "superjson": "^2.2.1",
    "validator": "^13.12.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cirrodrive/eslint-config": "workspace:^",
    "@cirrodrive/types": "workspace:*",
    "@faker-js/faker": "^8.4.1",
    "@trpc/client": "catalog:",
    "@trpc/react-query": "catalog:",
    "@types/cookie-parser": "~1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "~4.17.21",
    "@types/jsonfile": "~6.1.4",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.14.9",
    "@types/supertest": "~6.0.2",
    "@types/validator": "^13.12.0",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prisma": "^5.16.1",
    "supertest": "^7.0.0",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-node": "^2.1.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "catalog:"
  },
  "overrides": {
    "vite": {
      "rollup": "npm:@rollup/wasm-node"
    }
  }
}
