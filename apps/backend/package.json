{
  "name": "@cirrodrive/backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "imports": {
    "#decorators/*": {
      "types": [
        "./src/decorators/*.ts"
      ],
      "import": [
        "./dist/decorators/*.js"
      ]
    },
    "#errors/*": {
      "types": [
        "./src/errors/*.ts"
      ],
      "import": [
        "./dist/errors/*.js"
      ]
    },
    "#loaders/*": {
      "types": [
        "./src/loaders/*.ts"
      ],
      "import": [
        "./dist/loaders/*.js"
      ]
    },
    "#middlewares/*": {
      "types": [
        "./src/middlewares/*.ts"
      ],
      "import": [
        "./dist/middlewares/*.js"
      ]
    },
    "#repositories/*": {
      "types": [
        "./src/repositories/*.ts"
      ],
      "import": [
        "./dist/repositories/*.js"
      ]
    },
    "#routes/*": {
      "types": [
        "./src/routes/*.ts"
      ],
      "import": [
        "./dist/routes/*.js"
      ]
    },
    "#services/*": {
      "types": [
        "./src/services/*.ts"
      ],
      "import": [
        "./dist/services/*.js"
      ]
    },
    "#types/*": {
      "types": [
        "./src/types/*.ts"
      ],
      "import": [
        "./dist/types/*.js"
      ]
    },
    "#utils/*": {
      "types": [
        "./src/utils/*.ts"
      ],
      "import": [
        "./dist/utils/*.js"
      ]
    },
    "#test/*": [
      "./test/*.ts"
    ]
  },
  "exports": {
    "./app-router": {
      "types": "./src/routes/app.router.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "git clean -xdf .cache .turbo node_modules",
    "dev": "nodemon",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "start": "tsx dist/server.js",
    "test": "dotenvx run -f .env.test -- vitest",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@cirrodrive/prettier-config",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.813.0",
    "@aws-sdk/client-ses": "^3.813.0",
    "@aws-sdk/cloudfront-signer": "^3.813.0",
    "@aws-sdk/s3-presigned-post": "^3.813.0",
    "@aws-sdk/s3-request-presigner": "^3.813.0",
    "@aws-sdk/types": "^3.804.0",
    "@cirrodrive/database": "workspace:*",
    "@cirrodrive/schemas": "workspace:*",
    "@cirrodrive/utils": "workspace:*",
    "@dotenvx/dotenvx": "^1.44.0",
    "@node-rs/argon2": "^2.0.2",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@trpc/server": "catalog:",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.2.2",
    "jose": "^6.0.11",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.5",
    "node-cron": "^4.1.0",
    "nodemon": "^3.1.10",
    "pino": "^9.7.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^11.3.0",
    "reflect-metadata": "^0.2.2",
    "superjson": "^2.2.2",
    "tsx": "catalog:",
    "validator": "^13.15.0",
    "vite": "catalog:",
    "vite-node": "^2.1.9",
    "zod": "catalog:",
    "zod-form-data": "^2.0.7"
  },
  "devDependencies": {
    "@cirrodrive/eslint-config": "workspace:^",
    "@cirrodrive/prettier-config": "workspace:*",
    "@cirrodrive/typescript-config": "workspace:^",
    "@faker-js/faker": "^8.4.1",
    "@trpc/client": "catalog:",
    "@trpc/react-query": "catalog:",
    "@types/cookie-parser": "~1.4.8",
    "@types/cors": "^2.8.18",
    "@types/cross-spawn": "^6.0.6",
    "@types/express": "~4.17.21",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/jsonfile": "~6.1.4",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.47",
    "@types/npm-which": "^3.0.4",
    "@types/pino-http": "^5.8.4",
    "@types/qs": "^6.14.0",
    "@types/supertest": "~6.0.3",
    "@types/validator": "^13.15.0",
    "@vitest/coverage-v8": "catalog:",
    "cross-spawn": "^7.0.6",
    "eslint": "catalog:",
    "npm-which": "^3.0.1",
    "prettier": "catalog:",
    "prettier-plugin-jsdoc": "catalog:",
    "prettier-plugin-packagejson": "catalog:",
    "prettier-plugin-sort-json": "catalog:",
    "supertest": "^7.1.1",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "catalog:"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=20.19.1",
    "pnpm": "^10.11.0"
  }
}
