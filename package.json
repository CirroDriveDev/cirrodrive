{
  "name": "cirrodrive",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "check-types": "turbo check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "compose:prod:build": "docker compose -f compose.prod.yaml build",
    "compose:prod:up": "docker compose -f compose.prod.yaml up -d --remove-orphans",
    "compose:prod:down": "docker compose -f compose.prod.yaml down -v",
    "compose:dev:build": "docker compose -f compose.dev.yaml build",
    "compose:dev:up": "docker compose -f compose.dev.yaml up -d --remove-orphans",
    "compose:dev:down": "docker compose -f compose.dev.yaml down -v"
  },
  "devDependencies": {
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "turbo": "^2.1.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10.7.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
