{
  "name": "cirrodrive",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=20.18.0",
    "pnpm": "^9.6.0"
  },
  "packageManager": "pnpm@9.12.2",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:dev": "turbo run build:dev",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:start": "turbo run -F @cirrodrive/database start",
    "db:stop": "turbo run -F @cirrodrive/database stop",
    "db:dev": "turbo run -F @cirrodrive/database dev",
    "db:dev:stop": "turbo run -F @cirrodrive/database dev:stop",
    "db:push": "turbo run -F @cirrodrive/database db:push",
    "db:studio": "turbo run -F @cirrodrive/database db:studio",
    "db:generate": "turbo run -F @cirrodrive/database db:generate",
    "db:reset": "turbo run -F @cirrodrive/database db:reset",
    "dev": "turbo run dev",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpx sherif@latest",
    "postinstall": "pnpx sherif@latest && turbo run -F @cirrodrive/database db:generate",
    "prepare": "husky",
    "start": "turbo run start",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "docker:build": "docker-compose build",
    "docker:prod:up": "docker-compose up -d --remove-orphans --renew-anon-volumes frontend backend",
    "docker:prod:down": "docker-compose down -v frontend backend",
    "docker:dev:up": "docker-compose up -d --remove-orphans --renew-anon-volumes frontend-dev backend-dev",
    "docker:dev:down": "docker-compose down -v frontend-dev backend-dev",
    "docker:db:up": "docker-compose up -d database",
    "docker:db:down": "docker-compose down -v database"
  },
  "devDependencies": {
    "@cirrodrive/prettier-config": "workspace:*",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "prettier": "catalog:",
    "turbo": "^2.1.3",
    "typescript": "catalog:",
    "vite-node": "^2.1.4",
    "vitest": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "vite>rollup": "npm:@rollup/wasm-node"
    }
  },
  "prettier": "@cirrodrive/prettier-config"
}
