{
  "name": "cirrodrive",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=20.18.0",
    "pnpm": "^9.6.0"
  },
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "prisma:push": "turbo -F @cirrodrive/backend prisma:db:push",
    "prisma:studio": "turbo -F @cirrodrive/backend prisma:studio",
    "dev": "turbo watch dev --continue",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "prepare": "husky && turbo -F @cirrodrive/backend prisma:generate",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "compose:prod:build": "docker-compose -f compose.prod.yaml build",
    "compose:prod:up": "docker-compose -f compose.prod.yaml up -d --remove-orphans --renew-anon-volumes",
    "compose:prod:down": "docker-compose -f compose.prod.yaml down -v",
    "compose:dev:build": "docker-compose -f compose.dev.yaml build",
    "compose:dev:up": "docker-compose -f compose.dev.yaml up -d --remove-orphans --renew-anon-volumes",
    "compose:dev:down": "docker-compose -f compose.dev.yaml down -v"
  },
  "devDependencies": {
    "@cirrodrive/prettier-config": "workspace:*",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "prettier": "catalog:",
    "turbo": "^2.1.3",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "vite>rollup": "npm:@rollup/wasm-node"
    }
  },
  "prettier": "@cirrodrive/prettier-config"
}
