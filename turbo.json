{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "MODE", "PROD", "DEV", "TEST"],
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".cache/tsbuildinfo.json", "dist/**"],
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "outputLogs": "new-only"
    },
    "lint": {},
    "start": {
      "cache": false,
      "dependsOn": ["build"],
      "persistent": true
    },
    "test": {
      "cache": false,
      "dependsOn": ["@cirrodrive/utils#build", "@cirrodrive/database#build"],
      "env": ["MODE"],
      "persistent": true
    },
    "test:ci": {
      "dependsOn": ["@cirrodrive/utils#build", "@cirrodrive/database#build"],
      "env": ["MODE"],
      "outputs": [".cache/vitest-report.json"]
    },
    "test:coverage": {
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "ui-add": {
      "cache": false,
      "interactive": true
    }
  },
  "ui": "tui"
}
