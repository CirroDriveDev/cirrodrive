{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "MODE",
    "BASE_URL",
    "PROD",
    "DEV",
    "SSR",
    "NODE_ENV",
    "VITE_EC2_PUBLIC_URL",
    "VITE_CLIENT_PORT",
    "VITE_SERVER_PORT"
  ],
  "tasks": {
    "@cirrodrive/backend#dev": {
      "cache": false,
      "dependsOn": ["@cirrodrive/database#db:seed"],
      "env": ["DATABASE_URL"],
      "persistent": true
    },
    "@cirrodrive/database#build": {
      "env": ["DATABASE_URL"],
      "outputs": ["dist/**"]
    },
    "@cirrodrive/database#db:push": {
      "cache": false,
      "dependsOn": ["@cirrodrive/database#build"],
      "env": ["DATABASE_URL"]
    },
    "@cirrodrive/database#db:seed": {
      "cache": false,
      "dependsOn": [
        "@cirrodrive/database#build",
        "@cirrodrive/database#db:push"
      ],
      "env": ["DATABASE_URL"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".cache/tsbuildinfo.json", "dist/**"]
    },
    "clean": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "env": ["DATABASE_URL"],
      "persistent": true
    },
    "format": {
      "outputLogs": "new-only",
      "outputs": [".cache/.prettiercache"]
    },
    "lint": {
      "dependsOn": ["^topo", "@cirrodrive/database#build"],
      "outputs": [".cache/.eslintcache"]
    },
    "test": {
      "dependsOn": ["@cirrodrive/database#db:push", "^test"],
      "env": ["DATABASE_URL"],
      "outputs": [".cache/vitest-report.json"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "typecheck": {
      "dependsOn": ["^topo", "^build"],
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "ui-add": {
      "cache": false,
      "interactive": true
    }
  },
  "ui": "tui"
}
