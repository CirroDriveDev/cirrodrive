{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "MODE", "PROD", "DEV", "TEST"],
  "tasks": {
    "//#dev:mock:up": {
      "cache": false
    },
    "//#docker:attach": {
      "cache": false,
      "dependsOn": ["dev:mock:up", "^db:seed", "//#docker:build"],
      "persistent": true
    },
    "//#docker:build": {
      "cache": false
    },
    "//#docker:down": {
      "cache": false
    },
    "//#docker:up": {
      "cache": false,
      "dependsOn": ["dev:mock:up", "^db:seed", "//#docker:build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".cache/tsbuildinfo.json", "dist/**"]
    },
    "clean": {
      "cache": false
    },
    "db:push": {
      "cache": false,
      "dependsOn": ["@cirrodrive/database#db:push"]
    },
    "db:seed": {
      "cache": false,
      "dependsOn": ["@cirrodrive/database#db:seed"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["//#dev:mock:up"],
      "persistent": true
    },
    "format": {
      "outputLogs": "new-only"
    },
    "lint": {},
    "start": {
      "cache": false,
      "dependsOn": ["build"],
      "persistent": true
    },
    "test": {
      "cache": false,
      "dependsOn": ["@cirrodrive/database#build"],
      "env": ["MODE"],
      "persistent": true
    },
    "test:ci": {
      "dependsOn": ["@cirrodrive/database#build"],
      "env": ["MODE"],
      "outputs": [".cache/vitest-report.json"]
    },
    "test:coverage": {
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "ui-add": {
      "cache": false,
      "interactive": true
    }
  },
  "ui": "tui"
}
