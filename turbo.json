{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "MODE",
    "BASE_URL",
    "PROD",
    "DEV",
    "SSR",
    "NODE_ENV",
    "VITE_EC2_PUBLIC_URL",
    "VITE_CLIENT_PORT",
    "VITE_SERVER_PORT"
  ],
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".cache/tsbuildinfo.json", "dist/**"]
    },
    "@cirrodrive/database#build": {
      "env": ["DATABASE_URL"],
      "outputs": ["dist/**"]
    },
    "@cirrodrive/database#healthcheck": {
      "cache": false
    },
    "@cirrodrive/database#db:push": {
      "dependsOn": ["@cirrodrive/database#healthcheck"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["@cirrodrive/database#db:push"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "db:generate": {
      "outputs": ["dist/**"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:reset": {
      "cache": false
    },
    "format": {
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^topo", "^build"],
      "outputs": [".cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^topo", "^build"],
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "test": {
      "dependsOn": ["@cirrodrive/database#db:push", "^test"]
    },
    "ui-add": {
      "cache": false,
      "interactive": true
    }
  }
}
