{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "db:generate": {
      "dependsOn": ["build"],
      "env": ["DATABASE_URL"],
      "inputs": ["prisma/**"],
      "outputs": ["dist/**"]
    },
    "db:push": {
      "cache": false,
      "dependsOn": ["build"],
      "env": ["DATABASE_URL"]
    },
    "db:seed": {
      "cache": false,
      "dependsOn": ["build", "db:push"],
      "env": ["DATABASE_URL"]
    },
    "db:studio": {
      "cache": false,
      "dependsOn": ["build"],
      "env": ["DATABASE_URL"],
      "persistent": true
    },
    "dev": {
      "dependsOn": ["db:seed"],
      "env": ["DATABASE_URL"]
    },
    "test": {
      "dependsOn": ["db:push"],
      "env": ["DATABASE_URL"]
    },
    "test:ci": {
      "dependsOn": ["db:push"],
      "env": ["DATABASE_URL"]
    }
  }
}
