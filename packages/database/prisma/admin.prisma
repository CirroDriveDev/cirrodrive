model AdminUser {
  id        String         @id @default(uuid())
  email     String?         @unique
  password  String
  username  String
  createdAt DateTime       @default(now())
  Sessions  AdminSession[]
}

model AdminSession {
  id        String    @id @default(uuid())
  adminId   String
  admin     AdminUser @relation(fields: [adminId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime  @default(now())
}
