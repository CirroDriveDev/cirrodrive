{
  "name": "@cirrodrive/database",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "imports": {
    "#prisma": {
      "types": "./dist/prisma/index.d.ts",
      "import": "./dist/prisma/index.js"
    },
    "#schemas": "./dist/zod/schemas/index.ts",
    "#client": "./src/client.ts",
    "#healthcheck": "./src/healthcheck.ts",
    "#seed": "./src/seed.ts",
    "#src/*": "./src/*.ts",
    "#test/*": "./test/*.ts"
  },
  "exports": {
    "./prisma": {
      "types": "./dist/prisma/index.d.ts",
      "import": "./dist/prisma/index.js"
    },
    "./schemas": "./dist/zod/schemas/index.ts",
    "./client": "./src/client.ts",
    "./healthcheck": "./src/healthcheck.ts",
    "./seed": "./src/seed.ts",
    "./utils": "./src/utils.ts"
  },
  "scripts": {
    "build": "prisma generate",
    "ci:db:push": "prisma db push --accept-data-loss --force-reset --skip-generate",
    "ci:db:seed": "prisma db seed",
    "clean": "git clean -xdf .cache .turbo node_modules dist",
    "db:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:healthcheck": "tsx src/healthcheck.ts",
    "db:migrate": "prisma migrate dev --skip-generate --create-only --name init",
    "db:push": "prisma db push --accept-data-loss --force-reset --skip-generate",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "dev": "prisma studio --browser none",
    "format": "prettier --check .",
    "lint": "eslint",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@cirrodrive/prettier-config",
  "dependencies": {
    "@cirrodrive/utils": "workspace:*",
    "@dotenvx/dotenvx": "catalog:",
    "@node-rs/argon2": "^2.0.2",
    "@prisma/client": "^6.8.2",
    "mysql2": "^3.14.1",
    "prisma": "^6.8.2",
    "prisma-zod-generator": "^0.8.13",
    "tsx": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cirrodrive/eslint-config": "workspace:*",
    "@cirrodrive/prettier-config": "workspace:*",
    "@cirrodrive/typescript-config": "workspace:^",
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "^20.17.47",
    "@types/npm-which": "^3.0.4",
    "@vitest/coverage-v8": "catalog:",
    "cross-spawn": "^7.0.6",
    "eslint": "catalog:",
    "npm-which": "^3.0.1",
    "prettier": "catalog:",
    "prettier-plugin-jsdoc": "catalog:",
    "prettier-plugin-packagejson": "catalog:",
    "prettier-plugin-sort-json": "catalog:",
    "vitest": "catalog:"
  },
  "prisma": {
    "schema": "./prisma",
    "seed": "tsx src/seed.ts"
  }
}
